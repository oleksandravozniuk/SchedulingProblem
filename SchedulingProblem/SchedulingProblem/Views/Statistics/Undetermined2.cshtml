<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div id="chart8_div"></div>
<script type="text/javascript">


    google.charts.load('current', {
        packages: ['corechart', 'bar']
    });
    google.charts.setOnLoadCallback(LoadData);

    function LoadData() {
        $.ajax({

            url: '@Url.Action("Undetermined2","Statistics")',
            dataType: "json",
            type: "GET",
            error: function(xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function(data) {
                PopulationChart8(data);
                return false;
            }
        });
        return false;
    }

    function PopulationChart8(data) {
        var dataArray = [
            ['Step', 'Percents']
        ];
        $.each(data, function(i, item) {
            dataArray.push([item.step, item.percents]);
        });
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            title: 'Ratio',
            chartArea: {
                width: '50%'
            },
            colors: ['#d95f02'],
            hAxis: {
                title: 'Number of penalty arrays',
                minValue: 0
            },
            vAxis: {
                title: 'Percents',
                 viewWindow: {min: 0}
            },
            curveType: 'function'
        };
        var chart = new google.visualization.LineChart(document.getElementById('chart8_div'));

        chart.draw(data, options);
        return false;
    }
</script>

