@using SchedulingProblem.Models;
@model List<int>
@{
    ViewData["Title"] = "ScheduleInput";
}


@using (Html.BeginForm("ScheduleInput", "Undetermined", FormMethod.Post))
{
    <div class="row">
        <div class="col">
            Deadline
        </div>
        <div class="col">
            Penalty
        </div>
    </div>
    <div style="overflow-y:auto; overflow-x:auto; height:350px;">


        @for (int i = 0, k = 0; i < Model[Model.Count - 2]; i++)
        {

        <div class="row">
            @for (int j = 0; j < Model[Model.Count - 1] + 1; j++, k++)
            {
               
                <div class="col" style=" width:30px;">
                    @Html.TextBoxFor(x => Model[k])
                </div>
            }
        </div>
            @if (i == Model[Model.Count - 2] - 1)
            {
                @Html.HiddenFor(x => Model[Model.Count - 2]);
                @Html.HiddenFor(x => Model[Model.Count - 1]);
            }
        }

    </div>


    <input type="submit" value="Save" class="btn btn-primary" />
}
